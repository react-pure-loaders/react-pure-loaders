{
  "name": "react-pure-loaders",
  "version": "0.0.0-development",
  "description": "React PureComponent loading animations ",
  "main": "build/index.js",
  "umd:main": "build/umd/react-pure-loaders.production.min.js",
  "module": "build/es/index.js",
  "typings": "build/index.d.ts",
  "files": [
    "build"
  ],
  "repository": "git@github.com:jameswlane/react-pure-loaders.git",
  "author": "James W. Lane <james.w.lane@mac.com>",
  "license": "MIT",
  "scripts": {
    "build": "pnpm /^build:.*/",
    "build:cjs": "npx swc src -C module.type=commonjs -d build",
    "build:es6": "npx swc src -C module.type=es6 -d build/es6",
    "build:es": "npx swc src -C module.type=amd -d build/amd",
    "build:umd": "npx swc src -C module.type=umd -o build/umd/react-pure-loaders.production.min.js",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rimraf build coverage",
    "commit": "git-cz",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "eslint": "eslint --format=pretty src/**/*.{ts,tsx}",
    "eslint:fix": "eslint --fix --format=pretty src/**/*.{ts,tsx}",
    "gh-pages": "npm run build-storybook -o ./public && gh-pages -d public && rm -rf public",
    "lint:staged": "lint-staged",
    "setup": "npm i -g commitizen david git-cz npmvet typesync",
    "semantic-release": "semantic-release",
    "storybook": "start-storybook -s ./public -p 9001",
    "storybook:build": "build-storybook -o ./public",
    "storybook:dev": "start-storybook -s ./public -p $PORT",
    "test": "jest",
    "type-check:watch": "npm run type-check -- --watch",
    "type-check": "tsc --noEmit",
    "test:coverage": "jest --coverage",
    "verify": "npm run verify:npmvet && npm run verify:david && npm run verify:tscheck && npm run eslint && npm run test && npm run type-check",
    "verify:david": "npx david",
    "verify:npmvet": "npx npmvet --renderer ci --strict",
    "verify:tscheck": "npx typesync"
  },
  "keywords": [
    "animation",
    "animations",
    "busy",
    "component",
    "css",
    "css-in-js",
    "emotion",
    "idle",
    "indicator",
    "load",
    "loader",
    "loaders",
    "loading",
    "loading-animations",
    "loading-indicator",
    "loading-page",
    "loading-screen",
    "loading-spinner",
    "loadingview",
    "loadingscreen",
    "progress",
    "progress-circle",
    "progress-indicators",
    "progress-loader",
    "react",
    "react-component",
    "spinner",
    "spinners",
    "wait"
  ],
  "bugs": {
    "url": "https://github.com/jameswlane/react-pure-loaders/issues"
  },
  "homepage": "https://github.com/jameswlane/react-pure-loaders#readme",
  "devDependencies": {
    "@babel/core": "7.21.4",
    "@commitlint/cli": "17.5.1",
    "@commitlint/config-conventional": "17.4.4",
    "@emotion/jest": "11.10.5",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.42",
    "@swc/plugin-emotion": "2.5.56",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "14.0.0",
    "@types/babel__core": "7.20.0",
    "@types/chance": "1.1.3",
    "@types/eslint": "8.21.3",
    "@types/eslint-plugin-prettier": "3.1.0",
    "@types/jest": "29.5.0",
    "@types/marked": "4.0.8",
    "@types/prettier": "2.7.2",
    "@types/react": "18.0.33",
    "@types/react-dom": "18.0.11",
    "@types/semantic-release": "20.0.1",
    "@types/testing-library__jest-dom": "5.14.5",
    "@typescript-eslint/eslint-plugin": "5.57.0",
    "@typescript-eslint/parser": "5.57.1",
    "acorn": "8.8.2",
    "all-contributors-cli": "6.24.0",
    "chance": "1.1.11",
