    "coveralls": "3.0.0",
    "cz-conventional-changelog": "2.1.0",
    "enzyme": "3.1.1",
    "enzyme-adapter-react-16": "1.0.4",
    "enzyme-to-json": "3.2.2",
    "jest": "21.2.1",
    "raf": "3.4.0",
    "react-dom": "16.1.1",
    "react": "16.1.1",
    "semantic-release": "8.2.0",
    "ts-jest": "21.2.2",
    "tslint": "5.8.0",
    "tslint-config-airbnb": "5.3.1",
    "typescript": "2.6.1"
  },
